@using Microsoft.FluentUI.AspNetCore.Components
@inherits LayoutComponentBase

<FluentToastProvider Position="ToastPosition.BottomRight"  Timeout="5000"/>
<FluentDialogProvider @rendermode="InteractiveServer" />

<div class="page">
    @*     <div class="sidebar">
        <NavMenu />
    </div> *@

    <main>
        <div class="top-row px-4 d-flex align-items-center justify-content-between">
            <a href="/" class="logo-link">
                <img src="/css/images/logo.png" alt="Logo" style="height:40px;" />
                <span>AutoDoc</span>
            </a>
            <span class="user-name">Name&LastName</span>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
