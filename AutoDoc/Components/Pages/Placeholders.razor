@page "/placeholders"
@using AutoDocFront.Components.Modals
@using AutoDocFront.Components.Shared
@using AutoDocFront.Services
@using AutoDocFront.Utilities

@if (_isLoading)
{
    <div class="spinner mt-5"></div>
}
else
{

    <div class="container pb-4">
        <div>
            <h1 class="ph-title">Placeholderi</h1>
            <p>Pregled placeholdera po grupama.</p>
        </div>

        <div class="ph-actions-row">
            <div class="d-flex align-items-center gap-3 mb-3">
                <select class="form-select corporate-select w-auto"
                        @bind="CurrentGroupName"
                        @bind:event="onchange">
                    @foreach (var group in _allGroups)
                    {
                        <option value="@group">@group</option>
                    }
                </select>
                <div class="input-group">
                    <input class="form-control"
                           style="min-width: 400px;"
                           @bind="_searchInput"
                           placeholder="Pretraga po nazivu..." />
                    <button class="btn corporate-button-secondary" @onclick="OnSearch">
                        <i class="fa fa-search"></i> Traži
                    </button>
                    <button class="btn corporate-button-secondary btn-sm ms-1" @onclick="OnClear" title="Očisti filtere">
                        <i class="fa fa-eraser" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <div class="ph-pagination">
                @if (TotalPages > 1)
                {
                    <Pagination CurrentPage="_currentPage"
                                TotalPages="TotalPages"
                                OnPageChanged="OnGroupPageChanged" />
                }
            </div>
        </div>

        @if (CurrentGroupName != null)
        {
            <div class="ph-group-card">
                <h2 class="ph-group-title">@CurrentGroupName</h2>
                <span class="ph-group-count">@FilteredPlaceholders.Count placeholdera se nalazi u ovoj grupi.</span>
                <div class="row g-4">
                    @foreach (var ph in FilteredPlaceholders)
                    {
                        <div class="col-12 col-md-6 col-lg-4 d-flex">
                            <div class="corporate-card shadow-sm p-0 w-100" style="min-height: 120px;">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <span class="fw-bold text-dark text-truncate" style="font-size: 1.1rem;">@ph.Name</span>
                                            <span class="badge @PlaceholderHelpers.GetTypeBadgeClass(ph.Type.ToString())" style="font-size: 0.85em;">
                                                @ph.Type
                                            </span>
                                        </div>
                                        <div class="text-secondary small mb-1">@ph.Id</div>
                                        <div class="text-secondary small" style="max-width: 600px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                            @ph.Description
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end mt-2">
                                        <button class="btn corporate-button-secondary btn-sm"
                                                title="Detalji"
                                                @onclick="() => OpenDetails(ph)">
                                            <i class="fa fa-eye me-1"></i> Pregled
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

@if (_showDetails && _selectedPlaceholder != null)
{
    <PlaceholderDetailsModal IsOpen="_showDetails"
                             IsOpenChanged="@(v => _showDetails = v)"
                             Placeholder="_selectedPlaceholder" />
}
