@rendermode InteractiveServer
@page "/"

<PageTitle>Home</PageTitle>

<div class="mb-4">
	<div class="d-flex justify-content-between align-items-center">
		<div>
			@* <h1 class="h3 fw-bold text-dark">Dashboard</h1> *@
		</div>
	</div>
	<div class="container">
		<div class="row g-3 gy-3 mt-5">
			<div class="col-12 col-md-6 col-lg-4 d-flex">
				<div class="card dashboard-card border-0 shadow-sm h-100 cursor-pointer"
					 @onclick="@(() => Navigation.NavigateTo("/groups"))">
					<div class="card-header bg-transparent border-0 d-flex align-items-center gap-3">
						<div class="icon-box text-white rounded p-2 bg-primary">
							<i class="fa fa-object-group fa-2x" aria-hidden="true"></i>
						</div>
						<div class="flex-grow-1">
							<div class="fw-bold text-dark">Grupe članova</div>
						</div>
					</div>
					<div class="card-body">
						<div class="text-secondary">
							Upravljanje grupama sekcija i članova dokumenta
						</div>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-4 d-flex">
				<div class="card dashboard-card border-0 shadow-sm h-100 cursor-pointer"
					 @onclick="@(() => Navigation.NavigateTo("/group-selection"))">
					<div class="card-header bg-transparent border-0 d-flex align-items-center gap-3">
						<div class="icon-box text-white rounded p-2 bg-success">
							<i class="fa fa-puzzle-piece fa-2x" aria-hidden="true"></i>
						</div>
						<div class="flex-grow-1">
							<div class="fw-bold text-dark">Članovi</div>
						</div>
					</div>
					<div class="card-body">
						<div class="text-secondary">
							Kreiranje i editovanje sekcija dokumenta
						</div>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-4 d-flex">
				<div class="card dashboard-card border-0 shadow-sm h-100 cursor-pointer"
					 @onclick="@(() => Navigation.NavigateTo("/templates"))">
					<div class="card-header bg-transparent border-0 d-flex align-items-center gap-3">
						<div class="icon-box text-white rounded p-2 bg-purple">
							<i class="fa fa-file-text fa-2x" aria-hidden="true"></i>
						</div>
						<div class="flex-grow-1">
							<div class="fw-bold text-dark">Predlošci</div>
						</div>
					</div>
					<div class="card-body">
						<div class="text-secondary">
							Kreiranje i upravljanje template-ovima
						</div>
					</div>
				</div>
			</div>

			<div class="col-12 col-md-6 col-lg-4 d-flex">
				<div class="card dashboard-card border-0 shadow-sm h-100 cursor-pointer"
					 @onclick="@(() => Navigation.NavigateTo("/placeholders"))">
					<div class="card-header bg-transparent border-0 d-flex align-items-center gap-3">
						<div class="icon-box text-white rounded p-2 bg-primary">
							<i class="fa fa-hashtag fa-2x" aria-hidden="true"></i>
						</div>
						<div class="flex-grow-1">
							<div class="fw-bold text-dark">Placeholderi</div>
						</div>
					</div>
					<div class="card-body">
						<div class="text-secondary">
							Pregled dostupnih parametara
						</div>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-4 d-flex">
				<div class="card dashboard-card border-0 shadow-sm h-100 cursor-pointer"
					 @onclick="@(() => Navigation.NavigateTo("/placeholders2"))">
					<div class="card-header bg-transparent border-0 d-flex align-items-center gap-3">
						<div class="icon-box text-white rounded p-2 bg-success">
							<i class="fa fa-puzzle-piece fa-2x" aria-hidden="true"></i>
						</div>
						<div class="flex-grow-1">
							<div class="fw-bold text-dark">Članovi</div>
						</div>
					</div>
					<div class="card-body">
						<div class="text-secondary">
							Kreiranje i editovanje sekcija dokumenta
						</div>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-4 d-flex">
				<div class="card dashboard-card border-0 shadow-sm h-100 cursor-pointer"
					 @onclick="@(() => Navigation.NavigateTo("/templates"))">
					<div class="card-header bg-transparent border-0 d-flex align-items-center gap-3">
						<div class="icon-box text-white rounded p-2 bg-purple">
							<i class="fa fa-file-text fa-2x" aria-hidden="true"></i>
						</div>
						<div class="flex-grow-1">
							<div class="fw-bold text-dark">Predlošci</div>
						</div>
					</div>
					<div class="card-body">
						<div class="text-secondary">
							Kreiranje i upravljanje template-ovima
						</div>
					</div>
				</div>
			</div>
